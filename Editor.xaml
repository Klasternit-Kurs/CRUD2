<Window x:Class="CRUD2.Editor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRUD2"
        mc:Ignorable="d"
        Title="Editor" Height="450" Width="800">
	<UniformGrid Columns="2">
		<Label Content="Naziv:" FontSize="24"/>
		<TextBox Name="txt" Text="{Binding Naziv, UpdateSourceTrigger=Explicit}"/>
		<Label Content="Ulazna cena:" FontSize="24"/>
		<TextBox Text="{Binding Ucena, UpdateSourceTrigger=Explicit}"/>
		<Label Content="Marza:" FontSize="24"/>
		<TextBox Text="{Binding MarzaProc, UpdateSourceTrigger=Explicit}"/>
		<Button Content="Otkazi" Click="Otk"/>
		<Button Content="OK" Click="OK"/>
	</UniformGrid>
</Window>
